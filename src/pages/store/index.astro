---
import MainLayout from "../../layouts/MainLayout.astro";
import LabelChip from "../../components/LabelChip.astro";

const base = import.meta.env.BASE_URL;

const locations = [
    {
        name: "SECTOR 01 // FLAGSHIP",
        address: "Fictional location // Node 01",
        area: "SECTOR 01",
        hours: "10:00 - 18:00",
        details:
            "Our core sanctuary. The full archive is available for viewing.",
    },
    {
        name: "SECTOR 02 // STUDIO",
        address: "Fictional location // Node 02",
        area: "SECTOR 02",
        hours: "11:00 - 20:00",
        details: "Focusing on technical outerwear and editorial installations.",
    },
    {
        name: "SECTOR 03 // CONCEPT",
        address: "Fictional location // Node 03",
        area: "SECTOR 03",
        hours: "10:00 - 17:00",
        details:
            "A minimalist space highlighting our accessory and knitwear lines.",
    },
];
---

<MainLayout
    title="VISIT // DROPCULTURE"
    description="Physical manifestations of DropCulture in a non-indexed concept demo."
>
    <div class="px-6 py-20 border-b border-line-light bg-ink text-bone">
        <h1
            class="font-space font-black text-7xl md:text-9xl tracking-[-0.05em] leading-[0.8] mb-8"
        >
            SITUATIONS
        </h1>
        <p
            class="text-acid text-xs uppercase tracking-[0.3em] font-bold max-w-lg leading-relaxed"
        >
            DROPCULTURE exists in the physical realm across three distinct
            nodes. Tactile engagement is encouraged. Digital noise
            is suppressed.
        </p>
    </div>

    <section
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-0 border-b border-line-light"
    >
        {
            locations.map((loc, i) => (
                <div
                    class:list={[
                        "p-12 border-line-light border-b md:border-b-0 reveal-up",
                        i < locations.length - 1 ? "md:border-r" : "",
                    ]}
                    style={`transition-delay: ${i * 100}ms`}
                >
                    <div class="mb-8">
                        <LabelChip text={loc.area} type="acid" class="mb-4" />
                        <h2 class="font-space font-bold text-3xl tracking-tighter mb-4">
                            {loc.name}
                        </h2>
                        <p class="text-xs uppercase font-black tracking-widest text-muted mb-4">
                            {loc.address}
                        </p>
                    </div>

                    <div class="aspect-square bg-void mb-8 overflow-hidden grayscale hover:grayscale-0 transition-all cursor-crosshair">
                        <div class="w-full h-full flex items-center justify-center text-bone opacity-20 text-[10px] uppercase tracking-[0.5em] font-bold">
                            [ Map // Manifest ]
                        </div>
                    </div>

                    <div class="flex flex-col gap-6">
                        <div>
                            <h4 class="text-[10px] uppercase font-black tracking-widest text-acid mb-2">
                                Hours
                            </h4>
                            <p class="text-sm uppercase font-bold tracking-tight">
                                Daily // {loc.hours}
                            </p>
                        </div>
                        <div>
                            <h4 class="text-[10px] uppercase font-black tracking-widest text-acid mb-2">
                                Philosophy
                            </h4>
                            <p class="text-xs uppercase leading-relaxed tracking-tight text-muted">
                                {loc.details}
                            </p>
                        </div>
                    </div>

                    <button class="mt-12 w-full border border-ink py-4 text-xs font-bold uppercase tracking-widest hover:bg-ink hover:text-bone transition-all">
                        Directions
                    </button>
                </div>
            ))
        }
    </section>

    <section
        class="py-24 px-6 flex flex-col md:flex-row gap-12 items-center bg-bone"
    >
        <div class="flex-1 reveal-up">
            <h3
                class="font-space font-black text-5xl uppercase tracking-tighter mb-6"
            >
                GLOBAL<br />DISPATCH
            </h3>
            <p
                class="text-muted text-sm uppercase tracking-tight max-w-sm mb-8 leading-relaxed"
            >
                For those who exist beyond the perimeter. We ship to all
                known territories. Tracked, encrypted, and intentional.
            </p>
            <div class="flex gap-4">
                <a
                    href={`${base}drops`}
                    class="bg-ink text-bone px-8 py-4 text-xs font-bold uppercase tracking-widest hover:bg-acid transition-colors"
                >
                    Browse Archive
                </a>
            </div>
        </div>
        <div class="flex-1 reveal-up" style="transition-delay: 200ms">
            <div
                class="aspect-[4/3] bg-line-light flex items-center justify-center"
            >
                <span
                    class="text-[10px] uppercase font-bold tracking-[0.3em] opacity-30"
                    >Global Logistical Visualization</span
                >
            </div>
        </div>
    </section>
</MainLayout>
